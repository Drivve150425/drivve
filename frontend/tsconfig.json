{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "types",
    "screens",
    "assets",
    "App.tsx",
    "**/*.ts",
    "**/*.tsx",
    "svg.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
